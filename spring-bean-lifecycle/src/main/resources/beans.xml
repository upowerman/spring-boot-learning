<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="beanPostProcessor" class="com.yunus.bean2.MyBeanPostProcessor">
    </bean>

    <bean id="instantiationAwareBeanPostProcessor" class="com.yunus.bean2.MyInstantiationAwareBeanPostProcessor">
    </bean>

    <bean id="beanFactoryPostProcessor" class="com.yunus.bean2.MyBeanFactoryPostProcessor">
    </bean>

    <bean id="person" class="com.yunus.bean2.Person" init-method="myInit" destroy-method="myDestory" scope="singleton">
        <property name="name" value="张三"/>
        <property name="beanPostProcessor" ref="beanPostProcessor"/>
        <property name="address" value="北京"/>
        <property name="phone" value="10086"/>
    </bean>

</beans>